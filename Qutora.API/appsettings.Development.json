{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=QutoraDB;Integrated Security=true;TrustServerCertificate=True;Encrypt=False;"
  },
  "Database": {
    "Provider": "SqlServer"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Key": "your-very-secure-jwt-secret-key-must-be-at-least-32-characters-long-change-this",
    "Issuer": "QutoraAPI",
    "Audience": "QutoraAPI",
    "DurationInMinutes": 60,
    "RefreshTokenExpiryDays": 7,
    "AccessTokenClockSkew": 0,
    "RequireHttpsMetadata": false,
    "SaveToken": true,
    "ValidateIssuerSigningKey": true,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "MinimalResponse": false,
    "TokenBlacklistEnabled": true
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:5173",
    "https://localhost:7001"
  ],
  "Storage": {
    "DefaultProvider": "filesystem",
    "FileSystem": {
      "BasePath": "C:\\QutoraData\\documents"
    },
    "DefaultBucket": {
      "Path": "default"
    }
  },
  "EmailSampleData": {
    "ApprovalRequest": {
      "RequesterName": "John Smith",
      "DocumentName": "Project Proposal.pdf",
      "PolicyName": "Document Approval Policy",
      "RequestReason": "Required for project approval",
      "ApproveUrl": "https://qutora.io/approve/SAMPLE123456",
      "RejectUrl": "https://qutora.io/reject/SAMPLE123456",
      "ViewUrl": "https://qutora.io/view/SAMPLE123456",
      "ShareUrl": "https://qutora.io/share/SAMPLE123456"
    },
    "ApprovalDecision": {
      "ApproverName": "Sarah Johnson",
      "Decision": "Approved",
      "Comments": "All criteria have been met",
      "DocumentName": "Project Proposal.pdf",
      "ViewUrl": "https://qutora.io/view/SAMPLE123456"
    },
    "DocumentShareNotification": {
      "SenderName": "Michael Davis",
      "DocumentName": "Annual Report.pdf",
      "RecipientName": "Jennifer Wilson",
      "Message": "Please review this document at your earliest convenience",
      "ShareUrl": "https://qutora.io/share/SAMPLE123456",
      "ViewUrl": "https://qutora.io/view/SAMPLE123456"
    }
  }
}
